<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"
        tools:ignore="ManifestOrder" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceApp"
        tools:targetApi="34">
        <activity
            android:name=".activity.enterance.IntroActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FinanceApp">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>

        <activity
            android:name=".activity.enterance.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FinanceApp" />

        <activity
            android:name=".activity.enterance.NoConnectionActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FinanceApp" />



        <activity
            android:name=".activity.menu_child.navigation.ChildHomeFragment"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FinanceApp">


        </activity>


        <activity
            android:name=".activity.enterance.ChildLoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FinanceApp" />
        <activity
            android:name=".activity.enterance.ProfilePhotoActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FinanceApp" />

        <activity
            android:name=".activity.enterance.RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FinanceApp" />

        <activity
            android:name=".activity.enterance.UserPreferencesActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FinanceApp">

        </activity>

        <activity
            android:name=".activity.menu.MenuActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FinanceApp">


        </activity>

        <activity
            android:name=".activity.menu.navigation.child.ChildControlActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FinanceApp">

        </activity>


        <activity
            android:name=".activity.menu_child.ChildMenuActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FinanceApp" />
    </application>



</manifest>